extends layout

block content  
  h1 Patrons
  p
    a.button(href='/patrons/new') Create New Patron
  table
    thead
      tr
        th Name 
        th Address
        th Email
        th Library ID
        th Zip
    tbody
      each patron in patrons
        tr
          td
            a(href='/patrons/' + patron.id) #{patron.first_name} #{patron.last_name}
          td #{patron.address}
          td #{patron.email}
          td #{patron.library_id}
          td #{patron.zip_code}
  append content 
    if pages > 0
    - var n = 1;
      div.pagination        
        ul.pagination-ul
          while n < pages + 1
            li
              a(href='/patrons/page_' + (n-1))= n++
