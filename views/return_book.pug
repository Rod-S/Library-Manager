extends layout

block content
  h1 Patron: Return Book
  include errors
  p
    strong Book Title: 
    | #{loans[0].Book.title}
  p
    strong Loaned By: 
    | #{loans[0].Patron.first_name} #{loans[0].Patron.last_name}
  p
    strong Loaned On: 
    | #{loans[0].loaned_on}
  p
    strong Return By: 
    | #{loans[0].return_by}
  form(action='/patrons/return_book/' + loans[0].book_id + '?_method=PUT', method="post")
    p
      label(for='returned_on') Returned on:
      input#returned_on(type='text' name='returned_on' value=new Date().toISOString().split('T')[0])
    p
      input(type='submit' value='Return Book')
